<?xml version="1.0" encoding="utf-8"?>
<!--
表格布局嵌套
    1] 布局分成几行几列
    ohos:row_count="3"
    ohos:column_count="3"
    2] 布局里的组件是安装那个顺序添加到表格里
    ohos:orientation="vertical"
    3]ohos:alignment_type="align_edges
    align_edges:边界对齐
    align_contents：页边距对齐

-->
<TableLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#FFFFFF"
    ohos:row_count="3"
    ohos:column_count="3"
    ohos:orientation="vertical"
    ohos:top_padding="100vp"
    ohos:left_padding="100vp"
    ohos:alignment_type="align_edges"
    >
    <Text
        ohos:height="50vp"
        ohos:width="50vp"
        ohos:background_element="red"
        ohos:text_size="35fp"
        ohos:text="1"
        ohos:left_margin="25vp"
        ohos:text_alignment="center"/>
    <Text
        ohos:height="50vp"
        ohos:width="50vp"
        ohos:background_element="#87CEEB"
        ohos:text_size="35fp"
        ohos:text="2"
        ohos:text_alignment="center"/>
    <Text
        ohos:height="50vp"
        ohos:width="50vp"
        ohos:background_element="#CCCCCC"
        ohos:text_size="35fp"
        ohos:text="3"
        ohos:text_alignment="center"/>

    <Text
        ohos:height="50vp"
        ohos:width="50vp"
        ohos:background_element="red"
        ohos:text_size="35fp"
        ohos:text="1"
        ohos:text_alignment="center"/>
    <Text
        ohos:height="50vp"
        ohos:width="50vp"
        ohos:background_element="#87CEEB"
        ohos:text_size="35fp"
        ohos:text="2"
        ohos:text_alignment="center"/>
    <Text
        ohos:height="50vp"
        ohos:width="50vp"
        ohos:background_element="#CCCCCC"
        ohos:text_size="35fp"
        ohos:text="3"
        ohos:text_alignment="center"/>
    <Text
        ohos:height="50vp"
        ohos:width="50vp"
        ohos:background_element="red"
        ohos:text_size="35fp"
        ohos:text="1"
        ohos:text_alignment="center"/>
    <Text
        ohos:height="50vp"
        ohos:width="50vp"
        ohos:background_element="#87CEEB"
        ohos:text_size="35fp"
        ohos:text="2"
        ohos:text_alignment="center"/>
    <Text
        ohos:height="50vp"
        ohos:width="50vp"
        ohos:background_element="#CCCCCC"
        ohos:text_size="35fp"
        ohos:text="3"
        ohos:text_alignment="center"/>

</TableLayout>