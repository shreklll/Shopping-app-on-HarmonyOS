<?xml version="1.0" encoding="utf-8"?>
<!--
线性布局嵌套
-->
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical"
    ohos:background_element="#FFFFFFFF">

    <Text
        ohos:height="40vp"
        ohos:width="300vp"
        ohos:bottom_margin="30vp"
        ohos:background_element="#CCCCCC"/>
    <Text
        ohos:height="40vp"
        ohos:width="300vp"
        ohos:bottom_margin="30vp"
        ohos:background_element="#CCCCCC"/>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:alignment="center">
        <Button
            ohos:height="40vp"
            ohos:width="130vp"
            ohos:background_element="#CCCCCC"
            ohos:text_size="30fp"
            ohos:text="注册"
            />
        <Button
            ohos:height="40vp"
            ohos:width="130vp"
            ohos:left_margin="30vp"
            ohos:background_element="#CCCCCC"
            ohos:text_size="30fp"
            ohos:text="登录"
            />

    </DirectionalLayout>


</DirectionalLayout>