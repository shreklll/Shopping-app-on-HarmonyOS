<?xml version="1.0" encoding="utf-8"?>
<!--
默认的布局方式：DirectionalLayout    线性布局
    1]设置排列方向
    ohos:orientation="vertical"
    vertical：垂直
    horizontal：水平

    2]weight
    (父亲布局高度|宽度-所有固定长度高度|宽度)/所有比重和

-->

<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Button
        ohos:height="0vp"
        ohos:width="150vp"
        ohos:background_element="#CCCCCC"
        ohos:left_margin="13vp"
        ohos:bottom_margin="10vp"
        ohos:text="Button 1"
        ohos:text_size="30fp"
        ohos:weight="3"
        />

    <Button
        ohos:height="0vp"
        ohos:width="150vp"
        ohos:background_element="red"
        ohos:left_margin="13vp"
        ohos:bottom_margin="10vp"
        ohos:text="Button 2"
        ohos:text_size="30fp"
        ohos:weight="1"
        />

    <Button
        ohos:height="300vp"
        ohos:width="150vp"
        ohos:background_element="#CCCCCC"
        ohos:bottom_margin="3vp"
        ohos:left_margin="13vp"
        ohos:text="Button 3"
        ohos:text_size="30fp"/>
