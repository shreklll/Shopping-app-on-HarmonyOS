<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Text
        ohos:height="70vp"
        ohos:width="300vp"
        ohos:background_element="$graphic:ability_main_shape_text"
        ohos:bottom_margin="20vp"
        />
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="horizontal_center"
        ohos:orientation="horizontal">
        <Button
            ohos:height="90vp"
            ohos:width="90vp"
            ohos:text_size="40fp"
            ohos:text="1"
            ohos:text_alignment="center"
            ohos:background_element="$graphic:ability_main_state_button"/>
        <Button
            ohos:height="90vp"
            ohos:width="90vp"
            ohos:text_size="40fp"
            ohos:text="2"
            ohos:text_alignment="center"
            ohos:background_element="$graphic:ability_main_state_button"/>
        <Button
            ohos:height="90vp"
            ohos:width="90vp"
            ohos:text_size="40fp"
            ohos:text="3"
            ohos:text_alignment="center"
            ohos:background_element="$graphic:ability_main_state_button"/>

    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="horizontal_center"
        ohos:orientation="horizontal">
        <Button
            ohos:height="90vp"
            ohos:width="90vp"
            ohos:text_size="40fp"
            ohos:text="4"
            ohos:text_alignment="center"
            ohos:background_element="$graphic:ability_main_state_button"/>
        <Button
            ohos:height="90vp"
            ohos:width="90vp"
            ohos:text_size="40fp"
            ohos:text="5"
            ohos:text_alignment="center"
            ohos:background_element="$graphic:ability_main_state_button"/>
        <Button
            ohos:height="90vp"
            ohos:width="90vp"
            ohos:text_size="40fp"
            ohos:text="6"
            ohos:text_alignment="center"
            ohos:background_element="$graphic:ability_main_state_button"/>

    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="horizontal_center"
        ohos:orientation="horizontal">
        <Button
            ohos:height="90vp"
            ohos:width="90vp"
            ohos:text_size="40fp"
            ohos:text="7"
            ohos:text_alignment="center"
            ohos:background_element="$graphic:ability_main_state_button"/>
        <Button
            ohos:height="90vp"
            ohos:width="90vp"
            ohos:text_size="40fp"
            ohos:text="8"
            ohos:text_alignment="center"
            ohos:background_element="$graphic:ability_main_state_button"/>
        <Button
            ohos:height="90vp"
            ohos:width="90vp"
            ohos:text_size="40fp"
            ohos:text="9"
            ohos:text_alignment="center"
            ohos:background_element="$graphic:ability_main_state_button"/>

    </DirectionalLayout>

    <Text
        ohos:height="70vp"
        ohos:width="300vp"
        ohos:background_element="$graphic:ability_main_shape_text"
        ohos:bottom_margin="20vp"
        ohos:text_size="40fp"
        ohos:text_alignment="center"
        ohos:text="CALL"
        ohos:top_margin="20vp"
        />

</DirectionalLayout>