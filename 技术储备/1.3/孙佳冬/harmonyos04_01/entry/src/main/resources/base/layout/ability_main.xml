<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Button
        ohos:id="$+id:button_01"
        ohos:height="50vp"
        ohos:width="310vp"
        ohos:background_element="#F2F2F2"
        ohos:text_size="40fp"
        ohos:text_alignment="center"
        ohos:text="跳转(普通)"/>

    <Button
        ohos:id="$+id:button_02"
        ohos:height="50vp"
        ohos:width="310vp"
        ohos:background_element="#F2F2F2"
        ohos:text_size="40fp"
        ohos:top_margin="20vp"
        ohos:text_alignment="center"
        ohos:text="跳转(携带数据)"/>


    <Button
        ohos:id="$+id:button_03"
        ohos:height="50vp"
        ohos:width="310vp"
        ohos:background_element="#F2F2F2"
        ohos:text_size="40fp"
        ohos:top_margin="20vp"
        ohos:text_alignment="center"
        ohos:text="跳转(返回数据)"/>

</DirectionalLayout>