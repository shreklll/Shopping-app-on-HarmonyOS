<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="228vp"
    ohos:width="175vp"
    ohos:orientation="vertical"
    ohos:margin="2vp"
    ohos:background_element="$graphic:background_index_image"><!--圆角-->

    <Image
        ohos:height="158vp"
        ohos:width="178vp"
        ohos:id="$+id:product_image"
        ohos:image_src="$media:img1"
        ohos:scale_mode="center"
        ohos:clip_alignment="center"></Image>
    <Text
        ohos:id="$+id:product_price_text"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:padding="2vp"
        ohos:text_size="13fp"
        ohos:text="￥13"
        ohos:text_color="#ff383b"></Text>
    <Text
        ohos:id="$+id:product_name_text"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:padding="2vp"
        ohos:text_size="13fp"
        ohos:text="￥13"
        ohos:text_color="#87cefa"></Text>


</DirectionalLayout>