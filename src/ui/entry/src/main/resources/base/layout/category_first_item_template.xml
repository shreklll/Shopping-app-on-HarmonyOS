<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="horizontal"
    ohos:left_padding="5vp"
    ohos:right_padding="5vp"
    ohos:top_padding="15vp"
    ohos:bottom_padding="15vp"
    ohos:background_element="#ffffff"
    ohos:top_margin="1vp">

    <Image
        ohos:id="$+id:first_category_icon_image"
        ohos:height="25vp"
        ohos:width="25vp"></Image>

    <Text
        ohos:id="$+id:first_category_name_text"
        ohos:height="match_content"
        ohos:width="58vp"
        ohos:left_margin="2vp"
        ohos:text_size="12fp"
        ohos:text_alignment="center"></Text>

</DirectionalLayout>

