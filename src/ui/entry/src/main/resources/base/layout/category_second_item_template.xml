<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_content"
    ohos:orientation="vertical"
    ohos:padding="5vp">

    <!--第一个二级分类-->
    <Text
        ohos:id="$+id:second_category_name_text"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text_size="12fp"
        ohos:text_alignment="left"
        ohos:text="二级分类1"
        ohos:top_margin="5vp"></Text>

    <!--第一个二级分类下的三级分类-->
    <TableLayout
        ohos:id="$+id:third_category_list_table"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:column_count="3">

    </TableLayout>

</DirectionalLayout>